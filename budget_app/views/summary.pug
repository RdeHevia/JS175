extends layout 

block summary
  form#expenses.tile(action="/expenses", method="get")
    label(for="all-expenses")      
      table
        h2 Expenses
        thead 
          tr 
            th Date 
            th Description 
            th Category 
            th Amount
        tbody 
          each expense in expenseList
            tr
              td= expense.fullDate
              td= expense.description
              td= expense.category
              td= `$ ${expense.amount}`
    input#all-expenses(type="submit", name="See all expenses")

  form.tile#month-year(action="/summary", method="get") 
    h2= monthYearTitle
    dl 
      dt
        label(for="month") Month 
      dd
        input#month(type="month", name="yearMonth" value=yearMonth)

    input(type="submit", value="Update")
  dl#total.tile
    dt Total
    dd= `$ ${total}`

  section#categories.tile
    h2 Categories
    each category in categoriesTotal 
      dl 
        dt= category.name 
        dd= category.total

